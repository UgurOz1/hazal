# Environment variables for Flask User Management Application
# Copy this file to .env and update with your actual values

# Flask configuration
SECRET_KEY=your-secret-key-here-generate-a-secure-one
FLASK_ENV=development

# Database configuration
DEV_DATABASE_URL=postgresql://username:password@localhost/flask_user_management_dev
DATABASE_URL=postgresql://username:password@localhost/flask_user_management
TEST_DATABASE_URL=sqlite:///:memory:

# Database debugging (development only)
SQLALCHEMY_ECHO=false

# Application settings
JSON_SORT_KEYS=false